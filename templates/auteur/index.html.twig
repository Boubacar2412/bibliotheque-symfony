{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Liste des auteurs</h1>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.dateNaissance ? auteur.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_auteur_show', {'id': auteur.id}) }}" class="btn btn-sm btn-info me-1">Voir</a>
                    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="{{ path('app_auteur_delete', {'id': auteur.id}) }}" class="btn btn-danger">Supprimer</a>

                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun auteur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_auteur_new') }}" class="btn btn-success">Ajouter un nouvel auteur</a>
</div>
{% endblock %}
