{% extends 'base.html.twig' %}

{% block title %}Détail du livre{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Détail du livre</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ livre.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Titre</th>
                        <td>{{ livre.titre }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date de publication</th>
                        <td>{{ livre.datePublication ? livre.datePublication|date('d/m/Y') : 'Non renseignée' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Disponible</th>
                        <td>
                            {% if livre.disponible %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-danger">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_livre_index') }}" class="btn btn-secondary">Retour à la liste</a>

            <div>
                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-warning me-2">Modifier</a>
                {{ include('livre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
