{% extends 'base.html.twig' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Liste des emprunts</h1>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Date d'emprunt</th>
                <th scope="col">Date de retour</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d H:i:s') : '—' }}</td>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('Y-m-d H:i:s') : '—' }}</td>
                <td class="text-center">
                    <a href="{{ path('app_emprunt_show', {'id': emprunt.id}) }}" class="btn btn-sm btn-info me-2">Voir</a>
                    <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="{{ path('app_emprunt_delete', {'id': emprunt.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun emprunt trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emprunt_new') }}" class="btn btn-success mt-3">Créer un nouvel emprunt</a>
</div>
{% endblock %}
