{% extends 'base.html.twig' %}

{% block title %}Modifier Emprunt{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h2 class="mb-0">Modifier l'emprunt #{{ emprunt.id }}</h2>
        </div>

        <div class="card-body">
            {{ include('emprunt/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="card-footer text-end">
            <a href="{{ path('app_emprunt_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
            {{ include('emprunt/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
